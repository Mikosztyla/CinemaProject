<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            styleClass="gallery-pane"
            fx:controller="agh.to.lab.cinema.controller.LoginController"
            fx:id="window">
    <center>
        <!-- Primary view -->
        <VBox spacing="10" alignment="CENTER" prefWidth="300" minWidth="400" maxWidth="600">
            <Label >Welcome to PapajeCinema!</Label>
            <Label>Login</Label>
            <HBox spacing="10" alignment="CENTER">
                <VBox spacing="20" alignment="CENTER_RIGHT">
                    <Label>Username:</Label>
                    <Label>Password:</Label>
                </VBox>
                <VBox spacing="10" alignment="CENTER">
                    <TextField fx:id="usernameTextFieldLogin" onKeyTyped="#resetUsernameLabelLogin" />
                    <PasswordField fx:id="passwordTextFieldLogin" onKeyTyped="#resetPasswordLabelLogin" />
                </VBox>
                <VBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="usernameLabelLogin" visible="false" textFill="red" />
                    <Label fx:id="passwordLabelLogin" visible="false" textFill="red" />
                </VBox>
            </HBox>
            <Button onAction="#sendLoginPostRequest" text="Log in" />
            <Label fx:id="loginResultLabel" visible="false" />
            <Label>You don't have an account?</Label>
            <Button onAction="#goToRegister" text="Sign up" />
        </VBox>
    </center>
</BorderPane>